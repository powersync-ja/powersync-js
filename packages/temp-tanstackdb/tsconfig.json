{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "types": ["node"],
    "rootDir": "src",
    "outDir": "./lib",
    "lib": ["esnext"],
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "preserveConstEnums": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
